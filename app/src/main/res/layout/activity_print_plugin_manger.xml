<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/plugin_manager_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app.titleTextAppearance="@style/PluginManagerToolbarTitle"
        android:textColor="@android:color/white"
        android:background="@color/HPFontColorBlue"
        android:layout_gravity="center">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/plugin_manager_sub_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:background="@color/HPFontColorLightGrey"
        android:text="@string/plugin_manager_sub_title"
        android:layout_below="@+id/plugin_manager_toolbar"
        android:padding="10dp" />

    <ListView
        android:id="@+id/plugin_manager_list_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/plugin_manager_sub_toolbar"/>

</RelativeLayout>
